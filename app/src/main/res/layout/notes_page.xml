<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d10b8"
    tools:context=".NotesPages">

    <RelativeLayout
        android:id="@+id/bannerTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="Back Button"
            android:src="@drawable/back_arrow_btn_icon"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="15dp"
            android:text="Folder X"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </RelativeLayout>



    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/bannerTitle"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar">


        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/bottomBar"
            app:layout_constraintTop_toBottomOf="@+id/bannerTitle"
            android:columnCount="1"
            android:rowCount="2">
            <RelativeLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="3dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/folder_view"
                    android:gravity="start|center_vertical"
                    android:paddingStart="15dp"
                    android:text="Folder 3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

                <LinearLayout
                    android:id="@+id/myLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titleTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000" />

                    <ImageButton
                        android:id="@+id/titleViewBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="0dp"
                        android:backgroundTint="#FFFFFF"
                        android:src="@drawable/view_btn_icon"
                        android:contentDescription="View Button"
                        android:textColor="#000000" />

                    <ImageButton
                        android:id="@+id/titleEditBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/titleDeleteBtn"
                        android:layout_below="@+id/titleViewBtn"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:backgroundTint="#FFFFFF"
                        android:src="@drawable/edit_btn_icon"
                        android:contentDescription="Edit Button"
                        android:textColor="#000000" />

                    <ImageButton
                        android:id="@+id/titleDeleteBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:backgroundTint="#FFFFFF"
                        android:src="@drawable/delete_btn_icon"
                        android:contentDescription="Delete Button"
                        android:textColor="#000000" />
                </LinearLayout>
            </RelativeLayout>
        </GridLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/newNoteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/purple_500"
        android:src="@drawable/add_btn_icon"
        app:fabCustomSize="60dp"
        app:maxImageSize="38dp"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>